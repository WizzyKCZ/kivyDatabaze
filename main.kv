#:import math.ceil math

BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Osobní databáze'
        md_bg_color: .8, .6, .4, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        id: navigation
        panel_color: .8, .8, .4, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Osobní databáze'
            icon: 'card-bulleted'

            DatabaseScreen:


<GameContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "100dp"

    MDTextField:
        id: game_name
        text: 'jméno hry'
        pos_hint: {'center_x': .5, 'center_y': .9}

    MDDropDownItem:
        id: platform_item
        pos_hint: {'center_x': .5, 'center_y': .7}
        size_hint_x: 1
        text: 'Platforma'
        on_release: self.parent.menu_platforms.open()

<PlatformContent>:
    orientation: 'vertical'
    size_hint_x: 1
    size_hint_y: None
    height: "100dp"

    MDTextField:
        id: platform_name
        text: 'Název platformy'
        pos_hint: {'center_x': .5, 'center_y': .9}
